<section class="span10" >
  
  <% content_for :body_content_title do %>
    <p></p>
  <% end %>
  
    <div class="well guide">
      <h5 class="underline">Guide</h5>
      <div class="info">
        <span class="left">Name: </span>
        <span class="right"><%= raw @walk.guide_name %></span>
      </div>
      
      <h5 class="underline">When</h5>
      <div class="info">
        <span class="left">Date: </span>
        <span class="right"><%= raw @walk.date.strftime("%e %B %Y") %></span>
      </div>
      <div class="info">
        <span class="left">Time: </span>
        <span class="right"><%= raw @walk.start_time.strftime("%l %p") %></span>
      </div>
      <div class="info">
        <span class="left">Duration: </span>
        <span class="right"><%= raw @walk.duration %> hours</span>
      </div>
      <div class="info">
        <span class="left">Language: </span>
        <span class="right">
        <% if @walk.language == 'en' %>
          English
        <% else %>
          French
        <% end %>
        </span>
      </div>
      
      <h5 class="underline">Where</h5>
      <div class="info">
        <span class="left">Start: </span>
        <span class="right"><%= raw @walk.starting_location %></span>
      </div>
      <div class="info">
        <span class="left">End: </span>
        <span class="right"><%= raw @walk.end_location %></span>
      </div>
      <div class="info">
        <span class="left">Area: </span>
        <span class="right"><%= raw @walk.neighbourhoods %></span>
      </div>
      <div class="info">
        <span class="left">Length: </span>
        <span class="right"><%= raw @walk.distance %> km</span>
      </div>
      
      <h5 class="underline">Accessibility:</h5>
      <div class="info">
        <%= raw @walk.accessibility_notes %>
      </div>
    </div>
    
    <div class="walk-info">
      <section>
        <h2><%=raw @walk.title %></h2>
      </section>
      
      <% unless @walk.synopsis.blank? %>
      <section>
        <h3 class="bottom_underline">Overview</h3>
      
        <div class="walk_content">
          <%=raw @walk.synopsis %>
        </div>
      </section>
      <% end %>
      
      <% unless @walk.description.blank? %>
      <section>
        <h3 class="bottom_underline">Description</h3>
      
        <div class="walk_content">
          <% if @walk.image_id %>
            <%= image_tag("#{Refinery::Image.find(@walk.image_id).url}", class: 'img-polaroid') %>
          <% end %>
          <%=raw @walk.description %>
        </div>
      </section>
      <% end %>
      
      <br>
    
      <% unless @walk.route.blank? %>
      <section>
        <h3 class="bottom_underline">Route</h3>
        <div class="walk_content">
          <%= raw @walk.route %>
        </div>
      </section>
      <% end %>
      
      <br>
      
      <% unless @walk.credentials.blank? %>
      <section>
        <h3 class="bottom_underline">About</h3>
      
        <div class="walk_content">
          <%=raw @walk.credentials %>
        </div>
      </section>
      <% end %>
    
    </div>
  
</section>