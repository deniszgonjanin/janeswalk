<section class="span10" >
  
  <% content_for :body_content_title do %>
    <p></p>
  <% end %>
  
    <div class="well guide">
      <h5 class="underline"><%= t :guide %>:</h5>
      <div class="info">
        <span class="left"><%= t :name %>: </span>
        <span class="right"><%= raw @walk.guide_name %></span>
      </div>
      
      <h5 class="underline"><%= t :when %></h5>
      <div class="info">
        <span class="left"><%= t :date_string %>: </span>
        <span class="right"><%= l(@walk.date, :format => :long) %></span>
      </div>
      <div class="info">
        <span class="left"><%= t :time_string %>: </span>
        <span class="right"><%= raw @walk.start_time.strftime("%l:%M %p") %></span>
      </div>
      <div class="info">
        <span class="left"><%= t :duration %>: </span>
        <span class="right"><%= raw @walk.duration %> hr</span>
      </div>
      <div class="info">
        <span class="left"><%= t :language %>: </span>
        <span class="right">
        <% if @walk.language == 'en' %>
          English
        <% else %>
          Fran√ßais
        <% end %>
        </span>
      </div>
      
      <h5 class="underline"><%= t :where %></h5>
      <div class="info">
        <span class="left"><%= t :start %>: </span>
        <span class="right"><%= raw @walk.starting_location %></span>
      </div>
      <div class="info">
        <span class="left"><%= t :end %>: </span>
        <span class="right"><%= raw @walk.end_location %></span>
      </div>
      <div class="info">
        <span class="left"><%= t :area %>: </span>
        <span class="right"><%= raw @walk.neighbourhoods %></span>
      </div>
      <div class="info">
        <span class="left"><%= t :distance %>: </span>
        <span class="right"><%= raw @walk.distance %> km</span>
      </div>
      
      <h5 class="underline"><%= t :accessibility %>:</h5>
      <div class="info">
        <%= raw @walk.accessibility_notes %>
      </div>
    </div>
    
    <div class="walk-info">
      <section>
        <h2><%=raw @walk.title %></h2>
      </section>
      
      <br>
      
      <% unless @walk.synopsis.blank? %>
      <section>
        <h3 class="bottom_underline">Overview</h3>
      
        <div class="walk_content">
          <%=raw @walk.synopsis %>
        </div>
      </section>
      <% end %>
      
      <br>
      
      <% unless @walk.description.blank? %>
      <section>
        <h3 class="bottom_underline">Description</h3>
      
        <div class="walk_content">
          <% if @walk.image_id %>
            <%= image_tag("#{Refinery::Image.find(@walk.image_id).url}", class: 'img-polaroid') %>
          <% end %>
          <%=raw @walk.description %>
        </div>
      </section>
      <% end %>
      
      <br>
    
      <% unless @walk.route.blank? %>
      <section>
        <h3 class="bottom_underline">Route</h3>
        <div class="walk_content">
          <%= raw @walk.route %>
        </div>
      </section>
      <% end %>
      
      <br>
      
      <% unless @walk.credentials.blank? %>
      <section>
        <h3 class="bottom_underline">About</h3>
      
        <div class="walk_content">
          <%=raw @walk.credentials %>
        </div>
      </section>
      <% end %>
      
      <%= render :partial => 'map', :locals => {map_marker: @walk.map_marker } %>
    
    </div>
  
</section>