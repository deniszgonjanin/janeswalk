<%= simple_form_for(@walk, :url => '/walks', :method => :post, html: {class: 'form-horizontal span6'}) do |f| -%>

  <% if notification = f.error_notification && false %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>
  
  <div class="well">
    <%= f.input :title, label: 'Title of Walk' %>
  
    <%= f.input :description, placeholder: 'Type your description here.', :input_html => { :class => "span4", :rows => '6', :style => "width:auto;" }, hint: "Tell us what your walk is about and why you want to share it.   Include links to other websites or books if you like." %>
    
    <!-- Need Image -->
    
  </div>
  
  
  <div class="well">
    <legend>Organizer / Tour Leader</legend>
    <%= f.input :guide_name, label: 'Name' %>
  
    <%= f.input :guide_email, label: 'Email' %>
  
    <%= f.input :guide_phone, label: 'Phone' %>
    
    <legend>Additional Tour Leader (optional)</legend>
    
    <%= f.input :guide2_name, label: 'Name' %>
  
    <%= f.input :guide2_email, label: 'Email' %>
  
    <%= f.input :guide2_phone, label: 'Phone' %>
    
    <%= f.input :credentials, label: 'About the Tour Leaders', :input_html => { :class => "span4", :rows => '6', :style => "width:auto;"  }, placeholder: "1-2 sentences giving leader(s) background and why they want to share this walk" %>
    
    <%= f.input :media, label: 'Willing to talk to media', hint: "if you indicate yes, we may pass your contact information above to journalists covering the Jane's Walk event." %>
  </div>
  
  <div class="well">
    <legend>Walk Logistics</legend>
    
    <div class="control-group">
      <%= f.label :date, class: 'control-label' -%>
      <div class="controls">
        <%= f.text_field :date, value: "12-02-2012", class: 'datepicker input-small'  -%>
        <%= f.text_field :start_time, value: "12:00", class: 'timepicker input-small'  -%>
        <span class="add-on">
            <i class="icon-time"></i>
        </span>
      </div>
    </div>
    
    <%= f.input :duration, label: 'Duration(hrs)', :input_html => {value: '2', step: '0.25'} %>
    
    <div class="control-group">
      <%= f.label :language, class: 'control-label' -%>
      <div class="controls">
        <%= f.select :language, [['English','en'], ['French','fr']]  -%>
      </div>
    </div>
    
    <%= f.input :starting_location, label: 'Starting Point', :input_html => { :class => "input-xlarge" }, placeholder: "The place where people should meet" %>

    <%= f.input :end_location, label: 'End Point', :input_html => { :class => "input-xlarge" }, placeholder: "Where people will be when the walk is over." %>
    
    <%= f.input :distance, label: 'Distance(km)', :input_html => {value: '3'} %>
    
    <%= f.input :neighbourhoods, label: 'Neighbourhood(s)', :input_html => { :class => "input-xlarge" }, placeholder: "e.g., the Byward Market" %>
    
    <%= f.input :route, :input_html => { :class => "span4", :rows => '6', :style => "width:auto;" }, placeholder: "Describe the general route the walk will follow." %>
    
    <!-- Need map marker placement -->
    
    <div class="control-group">
      <%= f.label :map_marker, 'Map: (Move the map marker to the starting location)', class: 'control-label' -%>
      <%= f.hidden_field :map_marker, :value => '45.435,-75.7' %>
      <%= render :partial => 'map_edit', :locals => {map_marker: '45.435,-75.7' } %>
    </div>
    
    <div class="control-group">
      <%= f.label :accesible, 'Accessible', class: 'control-label' -%>
      <div class="controls">
        <%= f.check_box :accesible, :checked => @walk[:accesible]  -%>
        <span class="help-block">Is the route accessible for people with wheelchairs, scooters, strollers, etc?</span>
      </div>
    </div>
    
    <%= f.input :accessibility_notes, :input_html => { :class => "span4", :rows => '6', :style => "width:auto;"  }, placeholder: "Note specific obstacles or exceptions, such as whether there are some steps or you will cross a grassy area." %>
    
  </div>
  
  <div class="well">
    <legend>Marshals</legend>
    <p>If you or your group have volunteers that can act as marshals for your walk, please provide their contact information.<p>
      
      <label><b>Marshal 1</b></label>
      <%= f.input :marshal_name, label: 'Name' %>

      <%= f.input :marshal_email, label: 'Email' %>

      <%= f.input :marshal_phone, label: 'Phone' %>
      
      <label><b>Marshal 2</b></label>
      <%= f.input :marshal2_name, label: 'Name' %>

      <%= f.input :marshal2_email, label: 'Email' %>

      <%= f.input :marshal2_phone, label: 'Phone' %>
      
      
  </div>
  
  
  <div class="actions controls">
    <%= f.submit "Submit Walk", class: 'btn btn-primary btn-large' %>
  </div>
  
<% end %>
