<%= form_for(@walk, :url => '/walks', :method => :post, html: {class: 'form-horizontal span6'}) do |f| -%>
  
  <div class="control-group">
    <%= f.label :title, 'Walk Name', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :title  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :guide_name, 'Your Name', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :guide_name  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :guide_email, 'Email', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :guide_email  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :guide_phone, 'Phone', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :guide_phone  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :starting_location, class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :starting_location, class: 'input-xlarge'  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :end_location, class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :end_location, class: 'input-xlarge'  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :route, class: 'control-label' -%>
    <div class="controls">
      <%= f.text_area :route, :rows => "6", class: 'span4'  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :description, class: 'control-label' -%>
    <div class="controls">
      <%= f.text_area :description, :rows => "6", class: 'span4'  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :credentials, 'About you', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_area :credentials, :rows => "6", class: 'span4'  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :neighbourhoods, 'Neighbourhood(s)', class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :neighbourhoods, class: 'input-xlarge' -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :date, class: 'control-label' -%>
    <div class="controls">
      <%= f.text_field :date, value: "12-02-2012", class: 'datepicker input-small'  -%>
      <%= f.text_field :start_time, value: "12:00", class: 'timepicker input-small'  -%>
      <span class="add-on">
          <i class="icon-time"></i>
      </span>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :duration, 'Duration(hrs)', class: 'control-label' -%>
    <div class="controls">
      <%= f.number_field :duration, value: "3"  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :language, class: 'control-label' -%>
    <div class="controls">
      <%= f.select :language, [['English','en'], ['French','fr']]  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :distance, 'Distance(km)', class: 'control-label' -%>
    <div class="controls">
      <%= f.number_field :distance, value: "3"  -%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :accesible, 'Accessible', class: 'control-label' -%>
    <div class="controls">
      <%= f.check_box :accesible, :checked => @walk[:accesible]  -%>
    </div>
  </div>
  
  <div class="actions controls">
    <%= f.submit "Submit", class: 'btn' %>
  </div>
  
<% end %>
