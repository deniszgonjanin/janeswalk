<section id='body_content' class="span10" >
  <% content_for :body_content_title do %>
    <p></p>
  <% end %>

  <% content_for :body do %>
    <section>
      <h2><%=raw @session.title %></h2>
    </section>
    
    <section>
      <h3 class="bottom_underline">Synopsis</h3>
      <p>
        <%=raw @session.synopsis %>
      </p>
    </section>
    
    <section>
      <h3 class="bottom_underline">Dates</h3>
      <p>
        <%=raw @session.timeframe %>
      </p>
    </section>
    
    <section>
      <h3 class="bottom_underline">English Walks</h3>
      <p>
        <% @session.walks.published.english.each do |walk| %>
          <%= link_to(walk.title, refinery.walks_walk_path(walk)) %>
        <% end %>
      </p>
    </section>
    
    <section>
      <h3 class="bottom_underline">French Walks</h3>
      <p>
        
      </p>
    </section>
    
  <% end %>

  <%= render '/refinery/content_page' %>
</section>