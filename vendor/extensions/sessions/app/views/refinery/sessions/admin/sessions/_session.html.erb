<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(session) -%>">
  <span class='title'>
    <b><%= truncate(session.title, length:60) %></b> [<%= session.status %>]

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.sessions_session_path(session),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_sessions_admin_session_path(session),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.sessions_admin_session_path(session),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => session.status),
        :method => :delete %>
  </span>

  <ul>
    <%= render :partial => 'walk', :collection => session.walks %>
  </ul>
</li>
