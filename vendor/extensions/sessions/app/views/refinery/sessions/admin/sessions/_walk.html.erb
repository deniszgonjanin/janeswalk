<li class='clearfix record' id="<%= dom_id(walk) -%>">
  <span class='title'>
    <%= walk.guide_name %> <b> <%= "[not published]" unless walk.published %> </b>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.walks_walk_path(walk),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_walks_admin_walk_path(walk),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.walks_admin_walk_path(walk),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => walk.guide_name),
        :method => :delete %>
  </span>
</li>
